#******************************************************************************#
#									VARIABLES								   #
#******************************************************************************#

NAME		= 	so_long
CC			=	cc
CFLAGS		=	-Wall -Wextra -Werror -I./minilibx-linux
LDFLAGS		= 	-L./minilibx-linux -lmlx -lX11 -lXext -lm
RM			=	rm -f

SRC			= 	main.c

OBJ			=	$(SRC:.c=.o)

#******************************************************************************#
#									   RULES								   #
#******************************************************************************#

all: $(NAME)

$(NAME): $(OBJ)
	$(CC) $(OBJ) $(CFLAGS) $(LDFLAGS) -o $(NAME)

clean:
	$(RM) $(OBJ)

fclean: clean
	$(RM) $(NAME)

re: fclean all

.PHONY: all clean fclean re